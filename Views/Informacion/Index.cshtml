@model ProyectoLuisa.Models.InformacionInstitucional
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
    ViewData["Title"] = "Gestión de Información Institucional";}

<h2>Información Institucional</h2>

<form asp-action="Guardar" method="post">
    <div class="form-group">
        <label>Misión</label>
        <textarea asp-for="Mision" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Visión</label>
        <textarea asp-for="Vision" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Valores</label>
        <textarea asp-for="Valores" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Logo URL</label>
        <input asp-for="LogoUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label>Texto Footer</label>
        <textarea asp-for="FooterTexto" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
</form>
