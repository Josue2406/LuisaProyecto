@{
    ViewData["Title"] = "Inicio";
    var eventos = ViewBag.Eventos as List<ProyectoLuisa.Models.Evento>;
}

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary">🎉 Próximos Eventos</h2>

    @if (eventos != null && eventos.Count > 0)
    {
        <div class="row g-4">
            @foreach (var e in eventos)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-sm h-100 border-0 hover-zoom">
                        @if (!string.IsNullOrEmpty(e.ImagenUrl))
                        {
                            <img src="@e.ImagenUrl"
                                 alt="@e.Titulo"
                                 class="card-img-top rounded-top"
                                 style="height: 220px; object-fit: cover;" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@e.Titulo</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-calendar-event"></i> @e.Fecha.ToString("dd/MM/yyyy")
                            </p>

                            <p class="card-text text-secondary flex-grow-1">
                                @(e.Descripcion.Length > 100 ? e.Descripcion.Substring(0, 100) + "..." : e.Descripcion)
                            </p>

                            <a asp-controller="Eventos" asp-action="Detalles" asp-route-id="@e.Id"
                               class="btn btn-outline-primary mt-auto w-100">
                                <i class="bi bi-eye"></i> Ver más
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4 shadow-sm">
            <i class="bi bi-info-circle"></i> No hay eventos publicados en este momento.
        </div>
    }
</div>

<style>
    /* Animación sutil al pasar el mouse */
    .hover-zoom {
        transition: transform 0.3s ease-in-out;
    }
    .hover-zoom:hover {
        transform: translateY(-5px) scale(1.02);
    }
</style>
