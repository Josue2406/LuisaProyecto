@{
    ViewData["Title"] = "Inicio";
    var eventos = ViewBag.Eventos as List<ProyectoLuisa.Models.Evento>;
    var horarios = ViewBag.Horarios as List<ProyectoLuisa.Models.Horario>;
    var info = ViewBag.Info as ProyectoLuisa.Models.InformacionInstitucional;
}

<!-- Banner -->
<div class="bg-primary text-white text-center py-5 mb-5">
    <h1>@(info?.FooterTexto ?? "Bienvenidos a la Plataforma Educativa Luisa")</h1>
    <p>Conectando docentes, estudiantes y comunidad educativa</p>
</div>

<!-- Misión y Visión -->
<div class="row mb-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h3 class="text-primary mb-3">🎯 Misión</h3>
                <p>@(info?.Mision ?? "Agrega la misión en la sección de Información Institucional.")</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h3 class="text-success mb-3">🌱 Visión</h3>
                <p>@(info?.Vision ?? "Agrega la visión en la sección de Información Institucional.")</p>
            </div>
        </div>
    </div>
</div>

<!-- Imagen institucional -->
@if (!string.IsNullOrEmpty(info?.LogoUrl))
{
    <div class="text-center mb-5">
        <img src="@info.LogoUrl" class="img-fluid rounded shadow-sm" style="max-height:300px; object-fit:cover;">
    </div>
}
else
{
    <div class="text-center mb-5">
        <img src="https://significado.com/img/cultura/escuela-interor-aula.jpg" class="img-fluid rounded shadow-sm" style="max-height:300px; object-fit:cover;">
    </div>
}

<!-- Eventos públicos -->
<h2 class="mb-3 text-center text-primary">📅 Últimos Eventos</h2>
@if (eventos?.Count > 0)
{
    <div class="row mb-5">
        @foreach (var e in eventos)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(e.ImagenUrl))
                    {
                        <img src="@e.ImagenUrl" class="card-img-top" style="height:180px; object-fit:cover;">
                    }
                    <div class="card-body">
                        <h5 class="fw-bold">@e.Titulo</h5>
                        <p>@e.Descripcion</p>
                        <small class="text-muted">Fecha: @e.Fecha.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No hay eventos publicados por ahora.</p>
}

<!-- Horarios públicos -->
<h2 class="mb-3 text-center text-success">🕓 Horarios Públicos</h2>
@if (horarios?.Count > 0)
{
    <div class="table-responsive mb-5">
        <table class="table table-striped shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>Materia</th>
                    <th>Día</th>
                    <th>Hora Inicio</th>
                    <th>Hora Fin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in horarios)
                {
                    <tr>
                        <td>@h.Materia</td>
                        <td>@h.DiaSemana</td>
                        <td>@h.HoraInicio</td>
                        <td>@h.HoraFin</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center text-muted">Aún no se han publicado horarios.</p>
}
