@model ProyectoLuisa.Models.Noticia

<div class="row g-3">

    <!-- TÍTULO -->
    <div class="col-12">
        <label asp-for="Titulo" class="form-label fw-bold"></label>
        <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <!-- DESCRIPCION CORTA -->
    <div class="col-12">
        <label asp-for="DescripcionCorta" class="form-label fw-bold"></label>
        <textarea asp-for="DescripcionCorta" class="form-control" rows="3"
                  placeholder="Breve resumen de la noticia"></textarea>
        <span asp-validation-for="DescripcionCorta" class="text-danger"></span>
    </div>

    <!-- CONTENIDO -->
    <div class="col-12">
        <label asp-for="Contenido" class="form-label fw-bold"></label>
        <textarea asp-for="Contenido" class="form-control" rows="6"
                  placeholder="Contenido completo de la noticia"></textarea>
        <span asp-validation-for="Contenido" class="text-danger"></span>
    </div>

    <!-- IMAGEN -->
    <div class="col-12">
        <label class="form-label fw-bold">Imagen</label>
        <input type="file" name="imagen" class="form-control" accept="image/*" />

        @if (Model != null && !string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <div class="mt-2">
                <p class="fw-bold">Imagen actual:</p>
                <img src="@Model.ImagenUrl" class="img-thumbnail" style="max-width: 200px;" />
            </div>
        }
    </div>

    <!-- PUBLICADA -->
    <div class="col-12 form-check mt-3">
        <input asp-for="Publicada" class="form-check-input" type="checkbox" />
        <label asp-for="Publicada" class="form-check-label fw-bold">Publicar noticia</label>
    </div>

</div>
