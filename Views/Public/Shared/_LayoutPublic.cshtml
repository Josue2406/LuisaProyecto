</ul>

        </div>

    </div>
</nav>


@{
    var action = ViewContext.RouteData.Values["Action"]?.ToString();
    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
}

@if (controller == "Public" && action == "Index")
{
    <!-- HERO corporativo con partículas -->
    <header class="hero mt-5">
        <div id="particles"></div>

        <div class="hero-content" data-aos="zoom-in">
            <h1 class="hero-title">Bienvenido a Plataforma Luisa</h1>
            <p class="hero-subtitle">Gestión moderna, accesible y profesional</p>
        </div>
    </header>
    }

    <!-- CONTENIDO DE LAS VISTAS -->
    <main class="container my-5">
        @RenderBody()
    </main>



    @inject ProyectoLuisa.Data.ApplicationDbContext _context

@{
    var info = _context.InformacionInstitucional.FirstOrDefault();
}

    <!-- FOOTER -->
    <footer class="bg-dark text-white py-4">
    <div class="container">
        <div class="row">

          

            <!-- Información de contacto -->
            <div class="col-md-3 mb-3">
                <h5>Contacto</h5>
                @if (!string.IsNullOrEmpty(info?.Telefono))
                {
                    <p><strong>Tel:</strong> @info.Telefono</p>
                }
                @if (!string.IsNullOrEmpty(info?.Correo))
                {
                    <p><strong>Correo:</strong> @info.Correo</p>
                }
            </div>

            <!-- Dirección -->
            <div class="col-md-3 mb-3">
                <h5>Ubicación</h5>
                @if (!string.IsNullOrEmpty(info?.Direccion))
                {
                    <p>@info.Direccion</p>
                }
            </div>

            <!-- Texto del footer -->
            <div class="col-md-3 mb-3">
                <h5>Información</h5>
                @if (!string.IsNullOrEmpty(info?.FooterTexto))
                {
                    <p>@info.FooterTexto</p>
                }
            </div>
        </div>

        <div class="text-center mt-4 pt-3 border-top border-secondary">
            <p class="mb-0">&copy; @DateTime.Now.Year - Proyecto Luisa. Todos los derechos reservados.</p>
        </div>
    </div>
</footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Particles -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@3.7.1/tsparticles.bundle.min.js"></script>

    <!-- AOS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

    <script>
        AOS.init();

        /* Configuración de partículas suaves */
        tsParticles.load("particles", {
            particles: {
                number: { value: 60 },
                size: { value: 3 },
                move: { speed: 1 },
                opacity: { value: 0.3 },
                color: { value: "#ffffff" },
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
