@model List<ProyectoLuisa.Models.Evento>

@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = "Eventos Públicos";
}

<h2 class="text-center text-primary mt-4 fw-bold">Eventos Públicos</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        No hay eventos publicados.
    </div>
}
else
{
    <div class="row mt-4 mb-5">
        @foreach (var e in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">

                    @if (!string.IsNullOrEmpty(e.ImagenUrl))
                    {
                        <img src="@e.ImagenUrl"
                             class="card-img-top"
                             style="height: 200px; object-fit: cover;" />
                    }

                    <div class="card-body">
                        <h5 class="fw-bold">@e.Titulo</h5>
                        <small class="text-muted">@e.Fecha.ToString("dd/MM/yyyy")</small>

                        <a asp-controller="Public" asp-action="Detalle" asp-route-id="@e.Id"
   class="btn btn-primary btn-sm mt-2">
    Ver más
</a>




                    </div>
                </div>
            </div>
        }
    </div>
}
