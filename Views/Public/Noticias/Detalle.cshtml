@model ProyectoLuisa.Models.Noticia
@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = Model.Titulo;

    // Sanitizar contenido
    var contenidoSeguro = System.Net.WebUtility.HtmlEncode(Model.Contenido)
        .Replace("\n", "<br/>");
}

<div class="container mt-4 mb-5">

    <h2 class="fw-bold text-primary mb-3">@Model.Titulo</h2>

    <p class="text-muted mb-4">
        <i class="bi bi-calendar-event"></i>
        @Model.Fecha.ToString("dddd dd 'de' MMMM yyyy")
    </p>

    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
    {
        <img src="@Model.ImagenUrl" class="img-fluid rounded shadow mb-4"
             style="max-height: 350px; object-fit: cover;" />
    }

    <div class="bg-light p-4 rounded shadow-sm">
        @Html.Raw(contenidoSeguro)
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-4">
        <i class="bi bi-arrow-left"></i> Volver
    </a>

</div>
