@model ProyectoLuisa.Models.Noticia

<div class="container mt-4">

    <a asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver
    </a>

    <h2 class="fw-bold text-primary">@Model.Titulo</h2>
    <p class="text-muted">@Model.Fecha.ToString("dd/MM/yyyy")</p>

    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
    {
        <img src="@Model.ImagenUrl" class="img-fluid rounded mb-3" />
    }

    <article class="mt-3">
        @Html.Raw(Model.Contenido.Replace("\n", "<br/>"))
    </article>

</div>
