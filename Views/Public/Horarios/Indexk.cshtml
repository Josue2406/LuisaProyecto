@model Dictionary<string, List<ProyectoLuisa.Models.Horario>>

@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = "Horarios P√∫blicos";

    var docentes = ViewBag.Docentes as Dictionary<int, string>;
    var secciones = ViewBag.Secciones as List<string>;
    var seccionSeleccionada = ViewBag.SeccionSeleccionada as string;
}

<div class="container mt-4 mb-5">

    <h2 class="text-center fw-bold text-primary mb-4">
        <i class="bi bi-calendar-week"></i> Horarios P√∫blicos
    </h2>

    <!-- üîΩ FILTRO POR SECCI√ìN -->
    <form method="get" class="text-center mb-4">
        <label class="fw-bold me-2">Filtrar por Secci√≥n:</label>

        <select name="seccionSeleccionada" class="form-select d-inline-block w-auto">
            <option value="">Todas</option>

            @foreach (var s in secciones)
            {
                <option value="@s" selected="@(s == seccionSeleccionada)">
                    @s
                </option>
            }
        </select>

        <button type="submit" class="btn btn-primary ms-2">
            <i class="bi bi-search"></i> Buscar
        </button>
    </form>

    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay horarios registrados.
        </div>
    }
    else
    {
        foreach (var grupo in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white fw-bold">
                    Secci√≥n: @grupo.Key
                </div>

                <div class="card-body p-0">
                    <table class="table table-striped table-hover m-0">
                        <thead class="table-light">
                            <tr class="text-center">
                                <th>D√≠a</th>
                                <th>Inicio</th>
                                <th>Fin</th>
                                <th>Materia</th>
                                <th>Docente</th>
                                <th>Aula</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var h in grupo.Value)
                            {
                                <tr class="text-center">
                                    <td>@h.DiaSemana</td>
                                    <td>@h.HoraInicio.ToString(@"hh\:mm")</td>
                                    <td>@h.HoraFin.ToString(@"hh\:mm")</td>
                                    <td>@h.Materia</td>

                                    <td>@(docentes.ContainsKey(h.DocenteId) ? docentes[h.DocenteId] : "No asignado")</td>

                                    <td>@h.Aula</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>
