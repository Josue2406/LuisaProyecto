@model List<ProyectoLuisa.Models.Evento>

@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = "Inicio Público";
}

<style>
/* ---------------- HERO / BIENVENIDA ---------------- */
.hero-section {
    background: linear-gradient(120deg, #e8f5ea 0%, #d0f0d5 100%);
    padding: 80px 0 50px 0;
    text-align: center;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    margin-bottom: 50px;
    position: relative;
    overflow: hidden;
}

.hero-section h1 {
    font-size: 3rem;
    font-weight: 800;
    color: #00b873;
    margin-bottom: 15px;
    text-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.hero-section p {
    font-size: 1.25rem;
    color: #3e3e3e;
}

/* Widgets */
.widget-card {
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    padding: 20px;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.widget-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.12);
}

.widget-card i {
    font-size: 3rem;
    margin-bottom: 15px;
}

.widget-card h5 {
    color: #00b873;
    font-weight: 700;
    margin-bottom: 10px;
}

.widget-card p {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 15px;
}

/* Botón más compacto */
.widget-card .btn {
    font-size: 0.9rem;
    padding: 6px 12px; /* un poco menos horizontal para que no quede muy ancho */
    border-radius: 6px;
    width: auto; /* ya no ocupa todo el ancho */
    display: inline-flex; /* permite alinear texto y flecha */
    align-items: center; /* centra verticalmente */
    justify-content: center; /* centra horizontalmente */
    gap: 4px; /* espacio entre texto y flecha, un poco más compacto */
    text-decoration: none; /* elimina subrayado si es un enlace */
    color: #fff; /* texto blanco */
    border: none; /* quita borde por defecto */
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.widget-card .btn:hover {
    background-color: #738eac; /* efecto hover más oscuro */
}



/* Botones hero */
.hero-section .btn {
    font-weight: 600;
    padding: 12px 25px;
    border-radius: 8px;
    transition: all 0.25s ease-in-out;
}

.hero-section .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.12);
}

/* ---------------- CARRUSEL ---------------- */
.carousel-small {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    margin-bottom: 50px;
}

.carousel-small img {
    height: 350px;
    object-fit: cover;
}

/* ---------------- EVENTOS ---------------- */
.card-hover {
    transition: all 0.3s ease-in-out;
    border-radius: 12px;
}

.card-hover:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 12px 25px rgba(0,0,0,0.12);
}

.card-hover img {
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    height: 180px;
    object-fit: cover;
}

.card-hover h5 {
    color: #00b873;
    font-weight: 700;
}

.card-hover small {
    color: #6c757d;
}

.card-hover p {
    color: #495057;
    font-size: 0.95rem;
}

/* ---------------- SECCIONES ---------------- */
.section-title {
    text-align: center;
    font-weight: 700;
    font-size: 2rem;
    margin-bottom: 35px;
    color: #00b873;
}

/* ---------------- RESPONSIVE ---------------- */
@@media (max-width: 768px) {
    .hero-section h1 {
        font-size: 2.2rem;
    }
    .hero-section p {
        font-size: 1rem;
    }
    .carousel-small img {
        height: 220px;
    }
}
</style>

<div class="container mt-4">

    <!-- Carrusel -->
    <div id="carouselPublic" class="carousel slide carousel-small" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/frente.jpg" class="d-block w-100" alt="Imagen institucional 1" />
            </div>
            <div class="carousel-item">
                <img src="/img/frente.jpg" class="d-block w-100" alt="Imagen institucional 2" />
            </div>
            <div class="carousel-item">
                <img src="/img/public3.jpg" class="d-block w-100" alt="Imagen institucional 3" />
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselPublic" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselPublic" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Hero / Bienvenida -->
   <!-- Hero / Bienvenida -->
    <div class="hero-section mb-5">
        <p>Accede rápidamente a los horarios, eventos y noticias de la institución.</p>
    </div>

    <!-- Widgets -->
    <div class="row g-4 mb-5">
        <!-- Horarios -->
        <div class="col-md-4">
            <div class="widget-card h-100">
                <i class="bi bi-clock-history text-warning"></i>
                <h5>Horarios</h5>
                <p>Consulta los horarios de clases y actividades programadas.</p>
                <a asp-controller="PublicHorarios" asp-action="Index" class="btn btn-warning text-white">
                    Ver más <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Eventos -->
        <div class="col-md-4">
            <div class="widget-card h-100">
                <i class="bi bi-calendar-event text-success"></i>
                <h5>Eventos</h5>
                <p>Revisa los próximos eventos y actividades institucionales.</p>
                <a asp-controller="Public" asp-action="Eventos" class="btn btn-success">
                    Ver más <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Noticias -->
        <div class="col-md-4">
            <div class="widget-card h-100">
                <i class="bi bi-newspaper text-primary"></i>
                <h5>Noticias</h5>
                <p>Mantente al día con los avisos y noticias de la institución.</p>
                <a asp-controller="Public" asp-action="Noticias" class="btn btn-primary">
                    Ver más <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Eventos recientes -->
    <h2 class="section-title">Eventos Recientes</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            No hay eventos recientes publicados.
        </div>
    }
    else
    {
        <div class="row mb-4">
            @foreach (var e in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 card-hover">
                        @if (!string.IsNullOrEmpty(e.ImagenUrl))
                        {
                            <img src="@e.ImagenUrl" class="card-img-top" alt="@e.Titulo" />
                        }
                        <div class="card-body">
                            <h5>@e.Titulo</h5>
                            <small>@e.Fecha.ToString("dd/MM/yyyy")</small>
                            <p class="mt-2">@e.Descripcion</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center">
            <a asp-controller="Public" asp-action="Eventos" class="btn btn-outline-success btn-lg">
                Ver todos los eventos
            </a>
        </div>
    }

</div>
