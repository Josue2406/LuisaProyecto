@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plataforma Luisa</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Segoe UI', sans-serif;
        }
        .navbar-brand {
            font-weight: 600;
            font-size: 1.25rem;
        }
        .nav-link {
            font-weight: 500;
            color: #333 !important;
        }
        .nav-link.active {
            font-weight: 600;
            color: #0d6efd !important;
            border-bottom: 2px solid #0d6efd;
        }
        footer {
            background: #f1f1f1;
            border-top: 1px solid #ddd;
            padding: 18px 0;
            text-align: center;
            margin-top: 40px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR ADMIN -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand text-primary" asp-controller="AdmInicio" asp-action="Index">
                <i class="bi bi-speedometer2"></i> Plataforma Luisa
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNav">

                <!-- MEN IZQUIERDO -->
                <ul class="navbar-nav me-auto">

                    <!-- Inicio -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdmInicio" ? "active" : "")"
                           asp-controller="AdmInicio" asp-action="Index">
                            <i class="bi bi-house-door"></i> Inicio
                        </a>
                    </li>

                    <!-- Eventos -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Eventos" ? "active" : "")"
                           asp-controller="Eventos" asp-action="Index">
                            <i class="bi bi-calendar-event"></i> Eventos
                        </a>
                    </li>

                    <!-- Horarios -->
                    <li class="nav-item">
    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "HorarioImagen" ? "active" : "")"
       asp-controller="HorarioImagen" asp-action="Index">
        <i class="bi bi-clock-history"></i> Horarios
    </a>
</li>


                    <!-- Informaci贸n -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Informacion" ? "active" : "")"
                           asp-controller="Informacion" asp-action="Index">
                            <i class="bi bi-info-circle"></i> Informaci贸n
                        </a>
                    </li>

                    <!-- Archivos -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Archivos" ? "active" : "")"
                           asp-controller="Archivos" asp-action="Index">
                            <i class="bi bi-folder2"></i> Archivos
                        </a>
                    </li>

                    <!-- Noticias -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Noticias" ? "active" : "")"
                           asp-controller="Noticias" asp-action="Index">
                            <i class="bi bi-newspaper"></i> Noticias
                        </a>
                    </li>

                    <!-- Panel Admin -->
                    @if (Context.Session.GetString("Rol") == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "") fw-semibold text-primary"
                               asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-gear-wide-connected"></i> Panel Admin
                            </a>
                        </li>

                    }
                </ul>

                <!-- USUARIO -->
                <div class="d-flex align-items-center gap-3">
                    <span class="text-muted">
                         Hola, <strong>@Context.Session.GetString("Nombre")</strong>
                    </span>

                    <a asp-controller="Login" asp-action="Logout" class="btn btn-danger btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Cerrar sesi贸n
                    </a>
                </div>

            </div>
        </div>
    </nav>

    <!-- CONTENIDO -->
    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        漏 2025 Plataforma Luisa 路 Todos los derechos reservados.<br />
        Nicoya, Guanacaste, Costa Rica
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
