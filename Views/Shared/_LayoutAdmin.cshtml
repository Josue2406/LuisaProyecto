    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container">

            <a class="navbar-brand" href="/Admin">
                Plataforma Luisa
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNav">

                <!-- MenÃº izquierdo -->
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Eventos" asp-action="Index">Eventos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Horarios" asp-action="Index">Horarios</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Informacion" asp-action="Index">InformaciÃ³n</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Archivos" asp-action="Index">Archivos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Noticias" asp-action="Index">Noticias</a>
                    </li>

                    @if (Context.Session.GetString("Rol") == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-primary" href="/Panel">
                                Panel Admin
                            </a>
                        </li>
                    }
                </ul>

                <!-- MenÃº derecho: Usuario -->
                <div class="d-flex align-items-center gap-3">

                    <span class="text-muted">
                        ðŸ‘‹ Hola, <strong>@Context.Session.GetString("Nombre")</strong>
