                        <i class="bi bi-box-arrow-right"></i> Cerrar sesiÃ³n
                    </a>
                </div>

            </div>
        </div>
    </nav>


    <!-- CONTENIDO -->
    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
