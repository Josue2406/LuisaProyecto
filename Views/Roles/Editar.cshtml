@{
    ViewData["Title"] = "Editar Rol";
    var rolActual = ViewBag.RolActual as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">Editar Rol</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Editar">
                        <input type="hidden" name="rolActual" value="@rolActual" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nombre actual</label>
                            <input type="text" class="form-control" value="@rolActual" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nuevo nombre de rol</label>
                            <input type="text" name="nuevoRol" class="form-control" placeholder="Ej: Profesor" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary fw-bold">Guardar cambios</button>
                            <a href="/Roles" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
