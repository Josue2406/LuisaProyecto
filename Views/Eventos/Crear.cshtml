@model ProyectoLuisa.Models.Evento

@{
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Evento";
}

<h2 class="text-center mb-4">游늰 Crear Nuevo Evento</h2>

<form asp-action="Crear" enctype="multipart/form-data" method="post" class="row g-3 needs-validation" novalidate>
    <div class="col-md-6">
        <label asp-for="Titulo" class="form-label fw-bold">T칤tulo del Evento</label>
        <input asp-for="Titulo" class="form-control" placeholder="Ej: Charla sobre IA en educaci칩n" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Fecha" class="form-label fw-bold">Fecha del Evento</label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Descripcion" class="form-label fw-bold">Descripci칩n</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Agrega una breve descripci칩n del evento..."></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Imagen del Evento (opcional)</label>
        <input type="file" name="Imagen" class="form-control" accept="image/*" />
        <div class="form-text">Formatos permitidos: JPG, PNG, GIF. Tama침o m치ximo: 5 MB.</div>
    </div>

    <div class="col-md-6">
        <label asp-for="Publicado" class="form-label fw-bold">Estado</label>
        <select asp-for="Publicado" class="form-select">
            <option value="true">Publicado</option>
            <option value="false">No publicado</option>
        </select>
        <span asp-validation-for="Publicado" class="text-danger"></span>
    </div>

    <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-success px-4">
            <i class="bi bi-save"></i> Guardar Evento
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
