@model ProyectoLuisa.Models.Evento

@{
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Evento";
}

<h2 class="text-center mb-4">✏️ Editar Evento</h2>

<form asp-action="Editar" enctype="multipart/form-data" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Titulo" class="form-label fw-bold">Título del Evento</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Fecha" class="form-label fw-bold">Fecha del Evento</label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label fw-bold">Imagen Actual</label>
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <div class="mb-2">
                <img src="@Model.ImagenUrl" alt="Imagen actual" class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
            </div>
        }
        else
        {
            <p class="text-muted">No hay imagen asociada.</p>
        }

        <label class="form-label fw-bold mt-2">Subir Nueva Imagen (opcional)</label>
        <input type="file" name="NuevaImagen" class="form-control" accept="image/*" />
        <div class="form-text">Formatos permitidos: JPG, PNG, GIF. Tamaño máximo: 5 MB.</div>
    </div>

    <div class="col-md-6">
        <label asp-for="Publicado" class="form-label fw-bold">Estado del Evento</label>
        <select asp-for="Publicado" class="form-select">
            <option value="true" selected="@(Model.Publicado)">Publicado</option>
            <option value="false" selected="@(!Model.Publicado)">No publicado</option>
        </select>
        <span asp-validation-for="Publicado" class="text-danger"></span>
    </div>

    <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
