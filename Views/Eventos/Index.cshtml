@model IEnumerable<ProyectoLuisa.Models.Evento>
@{
    ViewData["Title"] = "Eventos Escolares";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary fw-bold">📅 Eventos Escolares</h2>

    <!-- Botones superiores -->
    @if (Context.Session.GetString("Rol") == "Docente" || Context.Session.GetString("Rol") == "Admin")
    {
        <div class="d-flex justify-content-between mb-4">
            <a href="/Eventos/Crear" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg"></i> Crear nuevo evento
            </a>
            <a href="/Docente/Inicio" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Volver al panel
            </a>
        </div>
    }

    <!-- Si no hay eventos -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-calendar2-x"></i> No hay eventos registrados por el momento.
        </div>
    }
    else
    {
        <!-- Cuadrícula de eventos -->
        <div class="row">
            @foreach (var e in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">

                        <!-- 📸 Imagen del evento -->
                        @if (!string.IsNullOrEmpty(e.ImagenUrl))
                        {
                            <img src="@e.ImagenUrl" alt="@e.Titulo"
                                 class="card-img-top rounded-top"
                                 style="height:220px; object-fit:cover;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/400x200?text=Evento+Escolar"
                                 alt="Sin imagen"
                                 class="card-img-top rounded-top"
                                 style="height:220px; object-fit:cover;">
                        }

                        <!-- 📝 Contenido -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-primary">@e.Titulo</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @if (e.Descripcion.Length > 150)
                                {
                                    @($"{e.Descripcion.Substring(0, 150)}...")
                                }
                                else
                                {
                                    @e.Descripcion
                                }
                            </p>
                        </div>

                        <!-- 📅 Fecha + acciones -->
                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                            <small class="text-muted">📆 @e.Fecha.ToString("dd/MM/yyyy")</small>

                            @if (Context.Session.GetString("Rol") == "Docente" || Context.Session.GetString("Rol") == "Admin")
                            {
                                <div class="btn-group">
                                    <a href="/Eventos/Editar/@e.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>

                                    <form method="post" action="/Eventos/Eliminar/@e.Id" style="display:inline;">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¿Seguro que deseas eliminar este evento?');">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Estilos adicionales -->
<style>
.hover-card {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
}
.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
}
.card-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
</style>

<!-- Íconos Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
