@model IEnumerable<ProyectoLuisa.Models.Evento>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Panel de Administración - Docentes";
}

<h2 class="mb-4 text-center">Gestión de Eventos</h2>

@if (Context.Session.GetString("Rol") == "Docente" || Context.Session.GetString("Rol") == "Admin")
{
    <a asp-action="Crear" class="btn btn-success mb-3">➕ Nuevo Evento</a>
}

<table class="table table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Publicado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Titulo</td>
                <td>@e.Fecha.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (e.Publicado)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    @if (Context.Session.GetString("Rol") == "Docente" || Context.Session.GetString("Rol") == "Admin")
                    {
                        <a asp-action="Editar" asp-route-id="@e.Id" class="btn btn-primary btn-sm">Editar</a>

                        <form asp-action="CambiarEstado" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@e.Id" />
                            @if (e.Publicado)
                            {
                                <button type="submit" class="btn btn-warning btn-sm">Despublicar</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-sm">Publicar</button>
                            }
                        </form>

                        <form asp-action="Eliminar" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@e.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Eliminar este evento?');">Eliminar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
