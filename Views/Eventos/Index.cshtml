@model IEnumerable<ProyectoLuisa.Models.Evento>
@{
    ViewData["Title"] = "Eventos Escolares";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Eventos Escolares</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="/Eventos/Crear" class="btn btn-primary">+ Crear nuevo evento</a>
        <a href="/Docente/Inicio" class="btn btn-secondary">Volver al panel</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No hay eventos registrados.</p>
    }
    else
    {
        <div class="row">
            @foreach (var e in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="fw-bold">@e.Titulo</h4>
                            <p>@e.Descripcion</p>
                            <small class="text-muted">ðŸ“… @e.Fecha.ToString("dd/MM/yyyy")</small>

                            <div class="mt-3">
                                <a href="/Eventos/Editar/@e.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                <form method="post" action="/Eventos/Eliminar/@e.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Â¿Seguro que deseas eliminar este evento?');">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
