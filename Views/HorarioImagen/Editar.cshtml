@model ProyectoLuisa.Models.HorarioImagen

<h3 class="fw-bold mb-3">✏️ Editar Horario</h3>

<form asp-action="Editar" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Grado</label>
        <select asp-for="Grado" class="form-select" required>
            <option value="">-- Seleccione Grado --</option>
            @foreach (var grado in ViewBag.Grados as List<string>)
            {
                if (grado == Model.Grado.ToString())
                {
                    <option value="@grado" selected="selected">@grado</option>
                }
                else
                {
                    <option value="@grado">@grado</option>
                }
            }
        </select>
        <span asp-validation-for="Grado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Sección</label>
        <select asp-for="Seccion" class="form-select" required>
            <option value="">-- Seleccione Sección --</option>
            @foreach (var seccion in ViewBag.Secciones as List<string>)
            {
                if (seccion == Model.Seccion)
                {
                    <option value="@seccion" selected="selected">@seccion</option>
                }
                else
                {
                    <option value="@seccion">@seccion</option>
                }
            }
        </select>
        <span asp-validation-for="Seccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Docente</label>
        <select asp-for="Docente" class="form-select" required>
            <option value="">-- Seleccione Docente --</option>
            @foreach (var docente in ViewBag.Docentes as List<string>)
            {
                if (docente == Model.Docente)
                {
                    <option value="@docente" selected="selected">@docente</option>
                }
                else
                {
                    <option value="@docente">@docente</option>
                }
            }
        </select>
        <span asp-validation-for="Docente" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagen del horario</label>
        <input type="file" name="imagen" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <small class="text-muted">Imagen actual: <a href="@Model.ImagenUrl" target="_blank">Ver</a></small>
        }
    </div>

    <button class="btn btn-success">Guardar Cambios</button>
</form>
