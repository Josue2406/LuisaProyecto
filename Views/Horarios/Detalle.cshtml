@model ProyectoLuisa.Models.Horario

@{
    ViewData["Title"] = "Detalles del Horario";
    var rol = Context.Session.GetString("Rol");
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">ðŸ“˜ Detalles del Horario</h3>
        </div>

        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4">Materia:</dt>
                <dd class="col-sm-8">@Model.Materia</dd>

                <dt class="col-sm-4">Profesor:</dt>
                <dd class="col-sm-8">@Model.Profesor</dd>

                <dt class="col-sm-4">DÃ­a de la Semana:</dt>
                <dd class="col-sm-8">@Model.DiaSemana</dd>

                <dt class="col-sm-4">Hora de Inicio:</dt>
                <dd class="col-sm-8">@Model.HoraInicio.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">Hora de FinalizaciÃ³n:</dt>
                <dd class="col-sm-8">@Model.HoraFin.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">Aula:</dt>
                <dd class="col-sm-8">@Model.Aula</dd>

                <dt class="col-sm-4">Grupo:</dt>
                <dd class="col-sm-8">@Model.Grupo</dd>

                @if (!string.IsNullOrEmpty(Model.Seccion))
                {
                    <dt class="col-sm-4">SecciÃ³n:</dt>
                    <dd class="col-sm-8">@Model.Seccion</dd>
                }
