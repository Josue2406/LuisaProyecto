@model IEnumerable<ProyectoLuisa.Models.Horario>
@{
    ViewData["Title"] = "Horarios de Clase";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Horarios de Clase</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="/Horarios/Crear" class="btn btn-primary">+ Crear nuevo horario</a>
        <a href="/Docente/Inicio" class="btn btn-secondary">Volver al panel</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No hay horarios registrados.</p>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Materia</th>
                    <th>Día</th>
                    <th>Hora Inicio</th>
                    <th>Hora Fin</th>
                    <th>Publicado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Materia</td>
                        <td>@h.DiaSemana</td>
                        <td>@h.HoraInicio</td>
                        <td>@h.HoraFin</td>
                        <td>
                            @if (h.Publicado)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            <a href="/Horarios/Editar/@h.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <form method="post" action="/Horarios/Eliminar/@h.Id" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('¿Eliminar este horario?');">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
