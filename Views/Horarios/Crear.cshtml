@model ProyectoLuisa.Models.Horario
@{
    ViewData["Title"] = "Nuevo Horario";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Crear nuevo horario</h2>

    <form asp-action="Crear" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Materia" class="form-label"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Profesor" class="form-label"></label>
                <input asp-for="Profesor" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DiaSemana" class="form-label"></label>
                <input asp-for="DiaSemana" class="form-control" />
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="HoraInicio" class="form-label"></label>
                <input asp-for="HoraInicio" type="time" class="form-control" />
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="HoraFin" class="form-label"></label>
                <input asp-for="HoraFin" type="time" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Aula" class="form-label"></label>
                <input asp-for="Aula" class="form-control" />
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="Grupo" class="form-label"></label>
                <input asp-for="Grupo" class="form-control" />
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="Seccion" class="form-label"></label>
                <input asp-for="Seccion" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-success px-4">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
