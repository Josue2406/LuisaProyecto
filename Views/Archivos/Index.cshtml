@model IEnumerable<ProyectoLuisa.Models.Archivo>
@{
    ViewData["Title"] = "Gestión de Archivos";
    bool esDocenteOAdmin = ViewBag.EsDocenteOAdmin ?? false;
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-folder2-open"></i> Gestión de Archivos
    </h2>

    @if (esDocenteOAdmin)
    {
        <a href="@Url.Action("Subir")" class="btn btn-success mb-3">
            <i class="bi bi-upload"></i> Subir nuevo archivo
        </a>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No hay archivos disponibles.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th style="width: 260px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Nombre</td>
                        <td>@a.Descripcion</td>
                        <td>@a.FechaSubida.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Content($"~/uploads/archivos/{a.Ruta}")"
                               target="_blank"
                               class="btn btn-info btn-sm me-2">
                                <i class="bi bi-eye"></i> Ver
                            </a>

                            <a href="@Url.Content($"~/uploads/archivos/{a.Ruta}")"
                               download
                               class="btn btn-primary btn-sm me-2">
                                <i class="bi bi-download"></i> Descargar
                            </a>

                            @if (esDocenteOAdmin)
                            {
                                <form asp-action="Eliminar" asp-route-id="@a.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('¿Seguro que deseas eliminar este archivo?');">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
    .btn i {
        margin-right: 4px;
    }
</style>
