@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = "Misión";
}

<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-bullseye"></i> Misión Institucional
        </h1>
        <p class="text-muted">Conoce el propósito que impulsa nuestra labor.</p>
    </div>

    <div class="card shadow-lg border-0 fade-in">
        <div class="card-body p-5">
            <h4 class="fw-bold text-secondary mb-3">Nuestra Misión</h4>

            <p class="fs-5 lh-lg">
                Brindar un servicio educativo de excelencia, centrado en valores, innovación 
                y compromiso social, promoviendo el desarrollo integral de nuestros estudiantes 
                y contribuyendo a una sociedad más justa, participativa y solidaria.
            </p>

            <div class="mt-4 text-end">
                <a href="/Public" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Volver al Inicio
                </a>
            </div>

        </div>
    </div>

</div>

<style>
    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
