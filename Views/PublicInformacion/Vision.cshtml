@{
    Layout = "~/Views/Public/Shared/_LayoutPublic.cshtml";
    ViewData["Title"] = "Visión";
}

<div class="container py-5">

    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-eye"></i> Visión Institucional
        </h1>
        <p class="text-muted">Hacia dónde queremos llegar como institución.</p>
    </div>

    <div class="card shadow-lg border-0 fade-in">
        <div class="card-body p-5">
            <h4 class="fw-bold text-secondary mb-3">Nuestra Visión</h4>

            <p class="fs-5 lh-lg">
                Ser una institución educativa reconocida por su excelencia académica, 
                innovación tecnológica, inclusión social y formación de ciudadanos íntegros, 
                capaces de enfrentar los desafíos del futuro con liderazgo y responsabilidad.
            </p>

            <div class="mt-4 text-end">
                <a href="/Public" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Volver al Inicio
                </a>
            </div>

        </div>
    </div>

</div>

<style>
    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
