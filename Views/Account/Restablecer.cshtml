@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-3">Restablecer Contraseña</h3>
                    <p>Introduce tu nueva contraseña.</p>

                    <form method="post">
                        <input type="hidden" name="token" value="@ViewBag.Token" />

                        <div class="mb-3">
                            <label for="nuevaContrasena" class="form-label">Nueva Contraseña</label>
                            <input type="password" name="nuevaContrasena" class="form-control" required minlength="6" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Guardar Nueva Contraseña</button>

                        @if (ViewBag.Error != null)
                        {
                            <p class="text-danger mt-3 text-center">@ViewBag.Error</p>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
