@{
    ViewData["Title"] = "Restablecer Contrase単a";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Restablecer tu contrase単a</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Restablecer" method="post">
        <!-- Token oculto -->
        <input type="hidden" name="token" value="@ViewBag.Token" />

        <div class="mb-3">
            <label for="nuevaContrasena" class="form-label">Nueva contrase単a</label>
            <input type="password" class="form-control" id="nuevaContrasena" name="nuevaContrasena" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Cambiar contrase単a</button>
    </form>
</div>
