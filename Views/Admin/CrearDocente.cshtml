@{
    ViewData["Title"] = "Invitar Docente o Administrador";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0 fw-bold">Invitar Nuevo Usuario</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label for="nombre" class="form-label fw-semibold">Nombre completo</label>
                            <input type="text" name="nombre" class="form-control" placeholder="Ej: Mar√≠a Gonz√°lez" required />
                        </div>

                        <div class="mb-3">
                            <label for="correo" class="form-label fw-semibold">Correo electr√≥nico</label>
                            <input type="email" name="correo" class="form-control" placeholder="correo@ejemplo.com" required />
                        </div>

                        <!-- üß© Selector de rol -->
                        <div class="mb-3">
                            <label for="rol" class="form-label fw-semibold">Rol</label>
                            <select name="rol" class="form-select">
                                <option value="Docente" selected>Docente</option>
                                <option value="Admin">Administrador</option>
                            </select>
                            <small class="text-muted">
                                El rol define el tipo de acceso que tendr√° el usuario invitado.
                            </small>
                        </div>

                        <button type="submit" class="btn btn-success w-100 fw-bold">
                            <i class="bi bi-envelope-plus"></i> Enviar Invitaci√≥n
                        </button>

                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-success mt-3 text-center">
                                @ViewBag.Mensaje
                            </div>
                        }
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/Admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Panel
                </a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<style>
body {
    background-color: #f8f9fa;
}
.card {
    border-radius: 12px;
}
.card-header {
    border-top-left-radius: 12px !important;
    border-top-right-radius: 12px !important;
}
</style>
